				File file2 = multi.getFile("file2");
				File file3 = multi.getFile("file3");
				File file4 = multi.getFile("file4");
				//정상 파일만 추가하기
				List<File> files = new ArrayList<>();
				if(file1!=null){
					files.add(file1);
				}if(file2!=null){
					files.add(file2);
				}if(file3!=null){
					files.add(file3);
				}if(file4!=null){
					files.add(file4);
				}
					
